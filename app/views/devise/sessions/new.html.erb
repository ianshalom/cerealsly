<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>
    <% flash.each do |key, value| %>
       <div class="flash <%= key %>"><%= value %></div>
    <% end %>


  <div class="col center-block pt-5" align="center">

    <h1>Log in</h1>
    <br />

    <div class="container w-50 border border-success rounded bg-white" align="center">

      <div class="field pt-5 pb-3">

        <h5>

        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " email ", :class=> "text-center text-success border border-success rounded"%>

        </h5>

      </div>


      <div class="field pb-3">
        
        <h5>

        <%= f.password_field :password, autocomplete: "current-password", placeholder: " password ", :class=> "text-center text-success border border-success rounded"%>

        </h5>

      </div>

      <% if devise_mapping.rememberable? %>

        <div class="field">

          <%= f.check_box :remember_me %>

          <%= f.label :remember_me %>

        </div>

      <% end %>

      <br />

      <div class="actions pb-3">

        <%= f.submit "Log in", :class => 'btn btn-success rounded-pill btn-lg ' %>

      </div>

      <div class="col center-block pb-5" align="center">

        <%= render "devise/shared/links" %>

      </div>

    </div>

  </div>
  
<% end %>

