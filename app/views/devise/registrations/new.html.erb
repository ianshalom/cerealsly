<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col center-block pt-5 pb-5" align="center">

  <h1>Sign up</h1>

    <div class="container w-50 border border-success rounded bg-white" align="center">

      <div class="field pt-5 pb-3">

        <h5>

        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " email ", :class=> "text-center text-success border border-success rounded" %>

        </h5>

      </div>

      <div class="field pb-3">

        <h5>

        <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: " username ", :class=> "text-center text-success border border-success rounded" %>

        </h5>

      </div>

      <div class="field">

        <% if @minimum_password_length %>

        <h5>

        <%= f.password_field :password, autocomplete: "new-password", placeholder: " password ", :class=> "text-center text-success border border-success rounded" %>

        </h5>

        <div class="pt-0 mb-0">

        <em>( min <%=  @minimum_password_length %> characters )</em>

        </div>

        <br>

        <% end %>

      </div>

      <div class="field">
      

        <h5>

        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirm password", :class=> "text-center text-success border border-success rounded" %>

        </h5>


      </div>

      <div class=" pb-4" >

        <%= f.label :profile_pic, :class => "pb-0" %><br />

        <%= f.file_field :profile_pic, placeholder: "profile pic",:class=> "text-center text-success border border-success rounded btn-outline success" %>

      </div>

      <div class="field">
        
        <h5>

        <%= f.text_area :about, autofocus: true, autocomplete: "about", placeholder: "about", :class=> "text-center text-success border border-success rounded btn-outline success" %>

        </h5>

      </div>

      <br>

      <div class="actions">

        <%= f.submit "Sign up", :class => 'btn btn-success rounded-pill btn-lg' %>

      </div>

      <div class="col center-block pb-5" align="center">

        <%= render "devise/shared/links" %>

      </div>

    </div>

    </div>

    <% end %>   