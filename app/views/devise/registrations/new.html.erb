<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col center-block pt-5" align="center">

  <h2>Sign up</h2>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>( min <%=  @minimum_password_length %> characters )</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :profile_pic %><br />
    <%= f.text_field :profile_pic, autofocus: true, autocomplete: "profile_pic" %>
  </div>

  <div class="field">
    <%= f.label :about %><br />
    <%= f.text_field :about, autofocus: true, autocomplete: "about" %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Sign up", :class => 'btn btn-success rounded-pill btn-lg' %>
  </div>
</div>
<% end %>

  <div class="col center-block" align="center">
    <%= render "devise/shared/links" %>
  </div>