<%= form_with scope: :post, model: @post, local: true do |form| %>

<h1>Top up a bowl</h1>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :img_url %><br>
    <%= form.text_field :img_url %>
  </p>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>


  <p>
    <%= form.submit %>
  </p>

  <% end %> 